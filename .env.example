# =================================
# FRONTEND CONFIGURATION (.env in root)
# =================================

# Privy Authentication Configuration
# Get these from https://dashboard.privy.io
REACT_APP_PRIVY_APP_ID=your-privy-app-id-here
REACT_APP_PRIVY_CLIENT_ID=your-privy-client-id-here

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:5001

# Note: For production, update REACT_APP_API_BASE_URL to your production API URL

# =================================
# BACKEND CONFIGURATION (backend/.env)
# =================================

# Server Configuration
PORT=5001
NODE_ENV=production

# MongoDB Connection
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# JWT Auth (still used for backend session tokens)
JWT_SECRET=your_secure_jwt_secret_key_here
JWT_EXPIRE=7d

# Frontend URL (if different from API URL)
FRONTEND_URL=https://your-production-domain.vercel.app

# File Storage - For production use a cloud storage provider like Cloudinary or AWS S3
# Include relevant cloud storage credentials here